; vim: ft=nasm ts=2 sw=2 expandtab
%ifndef PUTSTR_H
%define PUTSTR_H

extern putstr_32
extern putstr_64
extern putstr_current_line


; macro puts {{{
%macro PUTS 1
 section .data
 %%str: db %1, 0
 section .text
 %if __BITS__ == 32
   mov esi, %%str
 %else
   mov rsi, %%str
 %endif
 call putstr_%[__BITS__]
%endmacro
; }}}

%endif ;;PUTSTR_H
